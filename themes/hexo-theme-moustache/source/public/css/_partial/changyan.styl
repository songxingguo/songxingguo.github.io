}
[data-user-id="795831470"] .msg-wrap-gw>div>.user-name-gw::after {
  content: "（楼主）";
  font-size: 12px;
  color: #e58c7c;
}

.block-cont-gw .wrap-action-gw {
  opacity: 0;
  transition: opacity 0.2s;
}
.block-cont-gw:hover .wrap-action-gw {
  opacity: 1;
  visibility: visible !important;
  transition: opacity 0.2s;
}

body>.clearfix, body>.aboutme, body>.message, body>.demos {
  .user-name-gw a, .issue-wrap-gw {
    color: #666 !important;
    font-size: 16px !important;
  }
  .clear-g.block-cont-gw:hover {
    background: #EEE !important;
  }
  .cmt-more-wrap-gw {
    background: #EEE !important;
    color: #777 !important;
  }
  .build-floor-gw {
    background-color: #F5F5F5 !important;
    border: 1px solid #E6E6E6 !important;
    border-left: 4px solid #CCC !important;
  }
}

@media screen and (max-width: 500px) {
  .user-time-gw {
    display: none !important;
  }
  .user-name-gw {  
    overflow: hidden !important;
    height: 20px !important;
    text-overflow: ellipsis !important;
    white-space: nowrap !important;
    width: 150px !important;
    display: inline-block !important;
    line-height: 22px !important;
  }
}


