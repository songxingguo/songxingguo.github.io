.head-img-gw {
  width: 50px !important;
  height: 50px !important;
  overflow: visible !important;
  padding: 0 !important;
}
.head-img-gw img {
  width: 50px !important;
  height: 50px !important;
  border-radius: 100% !important;
  transform: rotate(0);
  transition: all 0.3s;
  background: #CCC;
}
.head-img-gw img:hover {
  transform: rotate(180deg);
  transition: all 0.3s;
}

.clear-g.block-cont-gw {
