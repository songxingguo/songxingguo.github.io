.sidebar-hover {
  transition: all 0.3s;
  left: -648px;
  .func-btns {
    transition: all 0.3s;
    width: 62px;
    i.icon {
      color: #555;
      font-size: 14px;
      white-space: nowrap;
      span {
        display: inline-block;
        font-size: 14px;
        margin-left: 4px;
        color: #868686;
        position: relative;
        top: 1px;
        transition: all 0.3s;
        opacity: 1;
      }
    }
  }
}